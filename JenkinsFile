pipeline {
    agent any

    stages {
        stage('Build'){
            steps {
                echo 'Clone'
                git branch: 'main_with_maven', credentialsId: 'kcyoow', url: 'https://github.com/22HY24469-SoundSystem/SpaceInvader.git'
                sh 'chmod -x mvnw'
                sh './mvnw clean compile'
            }
        }
        stage('Test'){
            steps{
                sh './mvnw test'
            }

            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }
    }
}